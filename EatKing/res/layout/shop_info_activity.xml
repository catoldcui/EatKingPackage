<?xml version="1.0" encoding="utf-8"?>
<greendroid.widget.SegmentedHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/segmented_host"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <FrameLayout
        android:id="@id/gd_action_bar_content_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <!-- INSERT ORIGINAL LAYOUT HERE -->

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#a0ac65" >

			<LinearLayout
			    android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

	            <RelativeLayout
	                android:id="@+id/RelativeLayout1"
	                android:layout_width="match_parent"
	                android:layout_height="138dp"
	                android:background="#f8a062"
	                android:orientation="horizontal" >
	
	                <RelativeLayout
	                    android:id="@+id/relativeLayout2"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignBottom="@+id/shop_image"
	                    android:layout_alignParentLeft="true"
	                    android:layout_toLeftOf="@+id/shop_image"
	                    android:gravity="center_vertical|center_horizontal" >
	
	                    <TextView
	                        android:id="@+id/mark_num"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentRight="true"
	                        android:layout_alignParentTop="true"
	                        android:text="0"
	                        android:textColor="#eeeeee" />
	
	                    <TextView
	                        android:id="@+id/mark_num_string"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentTop="true"
	                        android:layout_centerHorizontal="true"
	                        android:text="签到人数"
	                        android:textColor="#eeeeee" />

	                </RelativeLayout>

	                <ImageView
	                    android:id="@+id/shop_image"
	                    android:layout_width="100dip"
	                    android:layout_height="100dip"
	                    android:layout_alignParentBottom="true"
	                    android:layout_centerHorizontal="true"
	                    android:gravity="center"
	                    android:src="@drawable/class1" />

	                <TextView
	                    android:id="@+id/username"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_above="@+id/shop_image"
	                    android:layout_centerHorizontal="true"
	                    android:text="shopname"
	                    android:textColor="#eeeeee"
	                    android:textSize="20sp"
	                    android:textStyle="bold" />

	            </RelativeLayout>
	            
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="147dp"
	                android:background="#f77e35"
	                android:orientation="horizontal"
	                android:paddingTop="30sp" >

	                <LinearLayout
	                    android:id="@+id/LinearLayout1"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:gravity="center_horizontal"
	                    android:orientation="vertical" >
					
		               <LinearLayout
		                    android:id="@+id/LinearLayout1"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="center_horizontal"
		                    android:orientation="horizontal" >

		                    <TextView
		                        android:id="@+id/textView1"
		                        android:layout_width="wrap_content"
		                        android:layout_height="match_parent"
		                        android:gravity="center_vertical"
		                        android:text="饭菜口味"
		                        android:textColor="#eeeeee"
		                        android:textSize="18sp" />
	
		                    <RatingBar
		                        android:id="@+id/taste_rating"
		                        style="@style/MyRatingBar"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content" />

	                    </LinearLayout>
                    
		               <LinearLayout
		                    android:id="@+id/LinearLayout1"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="center_horizontal"
		                    android:orientation="horizontal" >

		                    <TextView
		                        android:id="@+id/textView1"
		                        android:layout_width="wrap_content"
		                        android:layout_height="match_parent"
		                        android:gravity="center_vertical"
		                        android:text="服务质量"
		                        android:textColor="#eeeeee"
		                        android:textSize="18sp" />
	
		                    <RatingBar
		                        android:id="@+id/ser_rating"
		                        style="@style/MyRatingBar"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content" />

	                    </LinearLayout>
                    
		               <LinearLayout
		                    android:id="@+id/LinearLayout1"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="center_horizontal"
		                    android:orientation="horizontal" >

		                    <TextView
		                        android:id="@+id/textView1"
		                        android:layout_width="wrap_content"
		                        android:layout_height="match_parent"
		                        android:gravity="center_vertical"
		                        android:text="就餐环境"
		                        android:textColor="#eeeeee"
		                        android:textSize="18sp" />
	
		                    <RatingBar
		                        android:id="@+id/env_rating"
		                        style="@style/MyRatingBar"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content" />

	                    </LinearLayout>
	            	</LinearLayout>
	             </LinearLayout>
	            
	            <GridLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:columnCount="3"
			        android:paddingTop="1dip"  > 
			  
			       <Button
			           android:layout_width="60dip"
			           android:layout_height="60dip"
			           android:layout_gravity="fill"
			           android:background="#26360f"
			           android:text="电话"
			           android:textColor="@drawable/button_drawable" />

		            <TextView
		                android:id="@+id/level_view"
		                android:layout_gravity="fill"
		                android:background="#eeeeee"
		                android:gravity="center_vertical|center_horizontal"
		                android:text="电话信息"
		                android:textColor="#000" />
 
			        <TextView
			            android:layout_gravity="fill_vertical"
			            android:background="#eeeeee"
			            android:gravity="fill"
			            android:text=">"
			            android:textColor="#000" />
 
			    </GridLayout> 
	            
	             <GridLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:columnCount="3"
			        android:rowCount="2"
			        android:paddingTop="1dip" > 
			  
			        <Button
			            android:layout_width="60dip"
			            android:layout_height="60dip"
			            android:layout_gravity="fill"
			            android:layout_rowSpan="2"
			            android:background="#7ca542"
			            android:text="地址"
			            android:textColor="@drawable/button_drawable" />
 
		            <TextView
		                android:id="@+id/shop_info"
		                android:layout_gravity="fill"
		                android:layout_rowSpan="2"
		                android:background="#eeeeee"
		                android:gravity="center"
		                android:text="地址信息"
		                android:textColor="#000" />
 
			        <TextView
			            android:layout_gravity="fill_vertical"
			            android:layout_rowSpan="2"
			            android:background="#eeeeee"
			            android:gravity="fill"
			            android:text=">"
			            android:textColor="#000" />
 
			    </GridLayout>
			    <GridLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:columnCount="3"
			        android:rowCount="1"
			        android:paddingTop="1dip"  > 
			  
			        <Button
			            android:layout_width="60dip"
			            android:layout_height="60dip"
			            android:layout_gravity="fill"
			            android:background="#26360f"
			            android:text="评价"
			            android:textColor="@drawable/button_drawable" />

		            <TextView
		                android:id="@+id/comment"
		                android:layout_gravity="fill"
		                android:background="#eeeeee"
		                android:gravity="center_vertical|center_horizontal"
		                android:text="评价信息"
		                android:textColor="#000" />
 
			        <TextView
			            android:layout_gravity="fill_vertical"
			            android:background="#eeeeee"
			            android:gravity="fill"
			            android:text=">"
			            android:textColor="#000" />
 
			    </GridLayout> 
			    <GridLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:columnCount="3"
			        android:paddingTop="1dip"  > 
			  
			       <Button
			           android:layout_width="60dip"
			           android:layout_height="60dip"
			           android:layout_gravity="fill"
			           android:background="#7ca542"
			           android:text="菜推荐"
			           android:textColor="@drawable/button_drawable" />

		            <TextView
		                android:id="@+id/trends_view"
		                android:layout_gravity="fill"
		                android:background="#eeeeee"
		                android:gravity="center_vertical|center_horizontal"
		                android:text="菜品推荐"
		                android:textColor="#000" />
 
			        <TextView
			            android:layout_gravity="fill_vertical"
			            android:background="#eeeeee"
			            android:gravity="fill"
			            android:text=">"
			            android:textColor="#000" />
 
			    </GridLayout> 
            </LinearLayout>
         </ScrollView>
    </FrameLayout>

    <greendroid.widget.SegmentedBar
        android:id="@id/gd_segmented_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</greendroid.widget.SegmentedHost>
